# ===============================================
# REDIS CONFIGURATION
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===============================================
# QUEUE CONFIGURATION
# ===============================================
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000
QUEUE_PROCESSING_INTERVAL=1000

# ===============================================
# SERVER CONFIGURATION
# ===============================================
PORT=3000
NODE_ENV=development

# ===============================================
# PUPPETEER PERFORMANCE SETTINGS
# ===============================================
# Tiempo de espera para que la interfaz cargue (en ms)
PUPPETEER_WAIT_FOR_UI_TIMEOUT=5000
# Retraso entre caracteres al escribir en inputs
PUPPETEER_TYPING_DELAY=50
# Retraso despu√©s de hacer clic en un elemento
PUPPETEER_AFTER_CLICK_DELAY=150

# ===============================================
# FEATURES FLAGS (enable/disable queue processing)
# ===============================================
# true = usar Redis para cola, false = procesar directamente
USE_QUEUE=true
